<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <!-- items= "{/PartnerFunctions}" -->
  <Dialog 
    contentWidth= "90%"
        contentHeight="2000px"
        title= "{i18n>PARTNER_ADDRESS_SEARCH}">
  <Table
    id= "addressProposalDialog"
    noDataText= "{i18n>NO_PARTNERS_ADDRESSES_FOUND}"
    mode="SingleSelectMaster"
        growingScrollToLoad="true" 
        itemPress="_handleValueHelpPAddressClose"  
        rememberSelections= "false">
    <columns>
      <Column
        hAlign="Center" >
        <header>
          <Text text="{i18n>STANDARD}" />
        </header>
      </Column>
      <Column
        hAlign="Center">
        <header>
          <Text text="{i18n>NAME}" />
        </header>
      </Column>
      <Column
        hAlign="Center">
        <header>
          <Text text="{i18n>FUNCTION}" />
        </header>
      </Column>
      <Column
        width="30rem"
        hAlign="Center" >
        <header>
          <Text text="{i18n>ADDRESS}" />
        </header>
      </Column>
      <Column
        hAlign="Center"
        width="10rem">
        <header>
          <Text text="{i18n>TELEPHONE}" />
        </header>
      </Column>
      <Column
        hAlign="Center">
        <header>
          <Text text="{i18n>EMAIL}" />
        </header>
      </Column>
    </columns>
  </Table>
  <endButton>
            <Button text="Cancel" press="_handleValueHelpPAddressClose"/>
  </endButton>
</Dialog>
</core:FragmentDefinition>