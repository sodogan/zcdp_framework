<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <ViewSettingsDialog id="statusFilters" confirm="onHandleConfirm" resetFilters="onResetFilter">
        <filterItems>
            <ViewSettingsFilterItem id="status" text="{i18n>STATUS_TXT}" multiSelect="false">
                <items>
                    <ViewSettingsItem text="{StatusText}" key="{Status}" />
                </items>
            </ViewSettingsFilterItem>
        </filterItems>
    </ViewSettingsDialog>
</core:FragmentDefinition>
